
<div class="well">
  <center>
    <h2><%= @discussion.title %></h2>
    <p><%= @discussion.description %></p>
  </center>
</div>

<div class="well well-sm">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Comments:</th>
      <th><a id="addComment" ><span class="glyphicon glyphicon-plus"></span></a>
    <a id="minusComment"><span class="glyphicon glyphicon-minus"></span></a></th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td>
        <%= (User.find comment.user_id).first_name.capitalize %> said: <br>
        <%= comment.body %>
        </td>
        <td>
        <%= link_to "Delete this comment", discussion_comment_path(@discussion, comment), method: :delete, data: {confirm: "are you sure?"} %>
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="newComment" style="display:none;">
  <%= render 'comments/new' %>
</div>