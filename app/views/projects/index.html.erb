<h2> PROJECTS </h2>
<%= flash[:alert] %>
<table class="table table-striped">
<a href="/projects/new"><span class="glyphicon glyphicon-plus"></span>Create new project </a>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Description</th>
      <th>Due Date</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |p| %>
    <tr>
      <td><%= link_to p.title, project_path(p)%></td>
      <td><%= p.category %></td>
      <td><%= p.description %></td>
      <td><%= p.due_date %></td>
      <td>

        <%= link_to "EDIT", edit_project_path(p), class: "btn btn-default" %>
        <%= link_to "DELETE", project_path(p), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default" %>

        <% if p.status == true %>
          <%= link_to "DONE", change_toggle_path(p), class: "btn btn-default" %>
        <% else %>
          <%= link_to "NOT DONE", change_toggle_path(p), class: "btn btn-default" %>
        <% end %>
        

      </td>
    </tr>
    <% end %> 
  </tbody>

</table>


<%= will_paginate @projects %>

