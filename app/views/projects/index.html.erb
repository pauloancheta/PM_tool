<div class="row">

  <div class="col-md-2"><h2> PROJECTS </h2></div>
  <div class="col-md-10"  style="margin-top: 32px;">
  <a href="/projects/new"><span class="glyphicon glyphicon-plus"></span>Create a new project </a>
  </div>
<%= flash[:alert] %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Description</th>
      <th>Due Date</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |p| %>
    <tr>
      <td><%= link_to p.title, project_path(p)%></td>
      <td><%#= p.category %></td>
      <td><%= p.description %></td>
      <td><%= p.due_date %></td>
      <td>
        <% if p.user_id == current_user.id %>
          <%= link_to "EDIT", edit_project_path(p), class: "btn btn-default" %>
          <%= link_to "DELETE", project_path(p), 
                method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default" %>
        <% end %>
      </td>
    </tr>
    <% end %> 
  </tbody>

</table>


<%= will_paginate @projects %>

