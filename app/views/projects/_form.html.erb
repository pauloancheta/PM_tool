
  <%= form_for @project do |p| %>
    <div class="field">
      <%= p.label :title %>
      <%= p.text_field :title, class:"form-control" %>
    </div>
    <br>

    <div class="field">
    <%= p.label :caregory %>
    <%= p.text_field :category, class:"form-control" %>
    </div>
    <br>

    <div class="field">
    <%= p.label :description %>
    <%= p.text_area :description, class:"form-control" %>
    </div>
    <br>

    <div class="field">
    <%= p.label :due_date %>
    <%= p.date_field :due_date, class:"form-control" %>
    </div>
    <br>
    <%= p.submit %>
  <% end %>
