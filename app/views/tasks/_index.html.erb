
  <h4>Tasks: </h4>
  <a id="addTask" ><span class="glyphicon glyphicon-plus"></span></a>
    <a id="minusTask"><span class="glyphicon glyphicon-minus"></span></a>
  <%= flash[:alert] %>

  <div class="well newTask" style="display:none;">
    <%= render "tasks/new" %>
  </div>


<div class="row">
  <div class="col-md-6" id="pendingTask">
  <h3> Pending Task </h3>
  <table class="table table-striped" id="tasksTable">
    <thead>
      <tr>
        <th>Title</th>
        <th>Due Date</th>
        <th>Added By</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        <% @tasks.each do |task| %>
          <% if task.status == false %>
          <%= render partial: '/tasks/row', locals: { task: task }%>
          <% end %>
        <% end %> 
    </tbody>
  </table>
  </div>
  <div class="col-md-6" id="doneTask">  
  <h3> Done Task </h3>
  <table class="table table-striped" id="tasksTable">
    <thead>
      <tr>
        <th>Title</th>
        <th>Due Date</th>
        <th>Added By</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        <% @tasks.each do |task| %>
          <% if task.status == true %>
          <%= render partial: '/tasks/row', locals: { task: task }%>
          <% end %>
        <% end %> 
    </tbody>
  </table>
  </div>
 
</div>